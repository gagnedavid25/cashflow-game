@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="0">
        <MudDrawerHeader Class="mud-theme-primary">
            <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Class="mt-1"></MudIcon>
            <MudText Typo="Typo.h6">Cashflow Game</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}