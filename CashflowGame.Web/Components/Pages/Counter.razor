@page "/counter"

<PageTitle>Counter</PageTitle>

<MudContainer Class="mt-12" MaxWidth="MaxWidth.Medium">
    <MudGrid Spacing="4" Class="mt-12 px-4">
        <MudItem xs="6">
            <MudTextField T="string" Label="Profession" />
        </MudItem>
        <MudItem xs="6">
            <MudTextField T="string" Label="Joueur" />
        </MudItem>

        <MudItem xs="12" md="6">
            @* Income *@
            <MudText Typo="Typo.h5" GutterBottom="true">Revenus</MudText>

            <MudPaper Outlined="true">
                <MudList Clickable="true">
                    <MudListItem Icon="@Icons.Material.Filled.Work" Class="pa-2">
                        <div class="d-flex">
                            <MudText>Salaire</MudText>
                            <MudText Inline="true" Class="ml-auto">700$</MudText>
                        </div>
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.TrendingUp" Class="pa-2">
                        <div class="d-flex">
                            <MudText>Intérêts/Dividendes</MudText>
                            <MudText Class="ml-auto">0$</MudText>
                        </div>
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Business" Class="pa-2">
                        <div class="d-flex">
                            <MudText>Immobilier</MudText>
                            <MudText Class="ml-auto">0$</MudText>
                        </div>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            @* Income *@
            <MudText Typo="Typo.h5" GutterBottom="true">Dépenses</MudText>

            <MudPaper Outlined="true">
                <MudList Clickable="true">
                    <MudListItem Icon="@Icons.Material.Filled.RequestPage" Class="pa-2">
                        <div class="d-flex">
                            <MudText>Taxes</MudText>
                            <MudText Inline="true" Class="ml-auto">700$</MudText>
                        </div>
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.House" Class="pa-2">
                        <div class="d-flex">
                            <MudText>Hypothèque</MudText>
                            <MudText Class="ml-auto">0$</MudText>
                        </div>
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.School" Class="pa-2">
                        <div class="d-flex">
                            <MudText>Prêt étudiant</MudText>
                            <MudText Class="ml-auto">0$</MudText>
                        </div>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
